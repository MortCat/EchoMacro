<Window x:Class="EchoMacro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EchoPlayer" Height="101" Width="445"
        WindowStartupLocation="CenterScreen" Background="#F4F4F4" ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="170*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" CornerRadius="8" Padding="10" BorderBrush="#DDD" BorderThickness="1" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">

                <Button x:Name="btnStart" Content="Start" Width="60" Height="35" Click="BtnStart_Click"
                        Background="#3498db" Foreground="White" FontSize="14" FontWeight="Bold"
                        BorderBrush="Transparent" Cursor="Hand" Margin="5,0,5,0"/>

                <Button x:Name="btnStop" Content="End" Width="60" Height="35" Click="BtnStop_Click"
                        Background="#3498db" Foreground="White" FontSize="14" FontWeight="Bold"
                        BorderBrush="Transparent" Cursor="Hand" Margin="5,0,5,0"/>

                <Button x:Name="btnPlay" Content="Play" Width="60" Height="35" Click="BtnPlay_Click"
                        Background="#3498db" Foreground="White" FontSize="14" FontWeight="Bold"
                        BorderBrush="Transparent" Cursor="Hand" Margin="5,0,5,0"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <CheckBox x:Name="chkRepeat" Content="Repeat" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Delay:" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtDelay" Width="50" Height="25" Text="0" FontSize="12" Padding="5"
                             Background="White" BorderBrush="Gray" BorderThickness="1" TextAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
