<UserControl x:Class="EchoMacro.View.FileTreeView_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EchoMacro.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Popup x:Name="TreePopup" Placement="Relative" StaysOpen="False" AllowsTransparency ="True" PopupAnimation="Fade">
            <Border Background="White" BorderThickness="1" BorderBrush="Gray" Padding="2"
                    CornerRadius="5" Width="130" SnapsToDevicePixels="True" 
                    Focusable="True" FocusManager.IsFocusScope="True">
                <TreeView BorderThickness="0" SelectedItemChanged="TreeView_SelectedItemChanged" Margin="1">
                    <TreeViewItem Header="Load Record"/>
                    <TreeViewItem Header="Save As Record"/>
                    <TreeViewItem Header="Save Record"/>
                    <TreeViewItem Header="Close"/>
                </TreeView>
            </Border>
        </Popup>
    </Grid>
</UserControl>
